[user]
	email = koomen@protonmail.com
	name = Kim K
[alias]
	cleanup = "!git branch --merged | grep -v '\\*\\|master\\|develop\\|development\\|origin' | xargs -n 1 git branch -D"
	pom = push origin master
	pum = pull origin master
	pod = push origin develop
	pud = pull origin develop
	ds = diff --staged
	d = diff
	dst = diff --stat=160,120
	aa = add --all
	st = status
	b = branch
	c = checkout
	l = log --graph --pretty=format:'%Cred%h%Creset %Cblue<%ae>%C(yellow)%d%Creset %s %Cgreen(%cr | %ci)%Creset' --abbrev-commit --date=relative
	root = rev-parse --show-toplevel
[push]
	default = current
[core]
	pager = diff-so-fancy | less --tabs=4 -RFX
[color]
	ui = true
[color "diff-highlight"]
	oldNormal = red
	oldHighlight = red 52
	newNormal = green
	newHighlight = green 22
[color "diff"]
	meta = yellow
	frag = magenta
	commit = yellow
	old = red
	new = green
	whitespace = red reverse
[commit]
	gpgsign = true
